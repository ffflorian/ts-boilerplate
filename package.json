{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "ts-boilerplate": "dist/cli.js"
  },
  "dependencies": {
    "commander": "2.20.0",
    "fs-extra": "8.0.0",
    "jszip": "3.2.1"
  },
  "description": "A boilerplate for a modernâ„¢ TypeScript project.",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.3",
    "@ffflorian/tslint-config": "0.1.0",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@types/fs-extra": "5.1.0",
    "@types/jasmine": "3.3.12",
    "@types/jszip": "3.1.5",
    "@types/node": "12.0.1",
    "husky": "2.2.0",
    "jasmine": "3.4.0",
    "lint-staged": "8.1.6",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "semantic-release": "15.13.12",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.4.5"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "cli",
    "typescript"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "spec/**/*.ts": [
      "tslint --project tsconfig.jasmine.json --fix",
      "git add"
    ],
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "name": "@ffflorian/ts-boilerplate",
  "prettier": "@ffflorian/prettier-config",
  "repository": "https://github.com/ffflorian/ts-boilerplate.git",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix && yarn lint:ts:spec --fix",
    "lint": "yarn lint:ts && yarn lint:ts:spec && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:spec": "tslint --project tsconfig.jasmine.json",
    "prettier": "prettier \"*.{json,md}\"",
    "release": "semantic-release",
    "test": "ts-node -P tsconfig.jasmine.json node_modules/.bin/jasmine"
  },
  "version": "1.0.0"
}
